<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.simple_search.SimpleSearchFragment">
    <data>
        <variable
            name="simple_search_view_model"
            type="com.teletaleem.rmrs_customer.ui.search.simple_search.SimpleSearchViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar_fss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="@string/hint_search_food"
            app:iconifiedByDefault="false"
            app:queryBackground="@color/transparent"
            android:layout_marginStart="@dimen/margin_avg"
            android:layout_marginEnd="@dimen/margin_avg"
            android:layout_marginTop="@dimen/margin_avg" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_avg"/>

    </LinearLayout>
</layout>
