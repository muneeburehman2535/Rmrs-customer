<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="profile_view_model"
            type="com.comcept.rmrscustomer.ui.home.profile.ProfileViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_name_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_xxxxl">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_name"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:layout_marginStart="@dimen/margin_xxxl"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_name_ap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:enabled="false"
                        android:background="@drawable/edit_text_background_lite"
                        android:paddingTop="@dimen/padding_avg"
                        android:paddingBottom="@dimen/padding_avg"
                        android:paddingStart="@dimen/padding_avg"
                        android:textSize="@dimen/text_size_average"
                        android:textColor="@color/text_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxl"
                        android:layout_marginEnd="@dimen/margin_xxxl"
                        android:layout_marginBottom="@dimen/margin_xl"/>
                </androidx.constraintlayout.widget.ConstraintLayout>





            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_email_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/card_name_ap"
                android:layout_marginTop="@dimen/margin_xl">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_title_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_email"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:layout_marginStart="@dimen/margin_xxxl"
                        />
                    <TextView
                        android:id="@+id/txt_email_ap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Johndoe@gmail.com"
                        android:textSize="@dimen/text_size_average"
                        android:textColor="@color/text_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_email"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxxl"
                        android:layout_marginBottom="@dimen/margin_xl"/>
                </androidx.constraintlayout.widget.ConstraintLayout>





            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_number_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/card_email_ap"
                android:layout_marginTop="@dimen/margin_xl">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_title_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_phn_number"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:layout_marginStart="@dimen/margin_xxxl"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_number_ap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+92 321 8352790"
                        android:enabled="false"
                        android:background="@drawable/edit_text_background_lite"
                        android:paddingTop="@dimen/padding_avg"
                        android:paddingBottom="@dimen/padding_avg"
                        android:paddingStart="@dimen/padding_avg"
                        android:textSize="@dimen/text_size_average"
                        android:textColor="@color/text_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_title_number"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_xxl"
                        android:layout_marginEnd="@dimen/margin_xxxl"
                        android:layout_marginBottom="@dimen/margin_xl"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_update_pf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/button_background_avg"
                app:layout_constraintTop_toBottomOf="@+id/card_number_ap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_xxxxl"
                android:layout_marginStart="@dimen/margin_xxxl"
                android:layout_marginEnd="@dimen/margin_xxxl"
                android:layout_marginBottom="@dimen/margin_xl"
                android:visibility="gone"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
