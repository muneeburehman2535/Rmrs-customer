<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.filter_search.FilterSearchFragment">
    <data>
        <variable
            name="filter_view_model"
            type="com.comcept.rmrs_customer.ui.search.filter_search.FilterSearchViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_title_category_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_select_category"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_avg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_xl"
                    android:layout_marginStart="@dimen/margin_l"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_categories_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_category_filter"
                    android:layout_marginTop="@dimen/margin_l"/>

                <TextView
                    android:id="@+id/txt_title_price_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_select_price_range"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_avg"
                    app:layout_constraintTop_toBottomOf="@+id/rv_categories_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_xl"
                    android:layout_marginStart="@dimen/margin_l"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_layout_single_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_price_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="@dimen/margin_xxxl"
                    android:layout_marginStart="@dimen/margin_xxl"
                    android:layout_marginTop="@dimen/margin_xxxl"
                    android:layout_marginBottom="@dimen/margin_xl">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_avg"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingTop="@dimen/padding_avg"
                            android:paddingBottom="@dimen/padding_avg"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_layout_double_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_price_filter"
                    app:layout_constraintStart_toEndOf="@+id/card_layout_single_price"
                    app:layout_constraintEnd_toStartOf="@+id/card_layout_tripple_price"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="@dimen/margin_xxxl"
                    android:layout_marginTop="@dimen/margin_xxxl"
                    android:layout_marginBottom="@dimen/margin_xl">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="00"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_avg"
                            android:fontFamily="@font/montserrat_bold"
                            android:textStyle="bold"
                            android:paddingTop="@dimen/padding_avg"
                            android:paddingBottom="@dimen/padding_avg"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_layout_tripple_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title_price_filter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="@dimen/margin_xxxl"
                    android:layout_marginEnd="@dimen/margin_xxl"
                    android:layout_marginTop="@dimen/margin_xxxl"
                    android:layout_marginBottom="@dimen/margin_xl">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="000"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_avg"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingTop="@dimen/padding_avg"
                            android:paddingBottom="@dimen/padding_avg"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_search"
                    android:background="@drawable/button_background_avg"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/padding_l"
                    android:paddingBottom="@dimen/padding_l"
                    app:layout_constraintTop_toBottomOf="@+id/card_layout_tripple_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/margin_xxxl"
                    android:layout_marginStart="@dimen/margin_xxl"
                    android:layout_marginEnd="@dimen/margin_xxl"
                    android:layout_marginBottom="@dimen/margin_l"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </FrameLayout>
</layout>
