<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="category_binding"
            type="com.comcept.rmrscustomer.data_class.home.category.Categories" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_rectengle_layout_background_light"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small">

        <TextView
            android:id="@+id/txt_lcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{category_binding.categoryName}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_avg"
            android:layout_marginBottom="@dimen/margin_avg"
            android:layout_marginStart="@dimen/margin_avg"
            android:layout_marginEnd="@dimen/margin_avg" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>