<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curved_rectengle_layout_background_light"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small">

    <TextView
        android:id="@+id/txt_lcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Foods"
        android:textColor="@color/text_color"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_l"
        android:layout_marginStart="@dimen/margin_xxl"
        android:layout_marginEnd="@dimen/margin_xxl"/>

</androidx.constraintlayout.widget.ConstraintLayout>